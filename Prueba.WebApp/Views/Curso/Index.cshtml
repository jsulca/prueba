@model List<Curso>
@{
    ViewBag.Title = "Lista de Cursos";
}

<div class="row">
    <div class="col-12">
        <h3 class="text-center">Lista de Cursos</h3>
        <p class="text-right">
            <a href="/Curso/Nuevo" class="btn btn-primary">Nuevo</a>
        </p>
        <hr />
    </div>
    <div class="col-12">
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead class="thead-dark text-center">
                    <tr>
                        <th scope="col" width="20"></th>
                        <th scope="col" width="20">#</th>
                        <th scope="col">Descripción</th>
                        <th scope="col" width="100">Activo</th>
                    </tr>
                </thead>
                <tbody>
                    @if(Model != null && Model.Count > 0)
                    {
                        int i = 1;
                        foreach(var item in Model)
                        {
                            <tr>
                                <td>
                                    <a href="/Curso/Editar/@item.Id">Editar</a>
                                </td>
                                <td class="text-right">@(i++)</td>
                                <td>@item.Descripcion</td>
                                <td class="text-center @(item.Activo ? "text-success" : "text-danger")">@(item.Activo ? "SI" : "NO")</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td class="text-center" colspan="4">No existen registros</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


